#
# ETCD認証局
#

- name: Create ETCD CA working directory
  file:
    path: "{{ etcd_ca_home }}"
    state: directory
    owner: vagrant
    group: vagrant

#
# ETCD CAの作成
#
- name: Create Etcd CA
  template:  
    src: etcd-ca-config.json
    dest: "{{ etcd_ca_home }}"
    owner: vagrant
    group: vagrant
    mode: '0644'
- template:
    src: etcd-ca-csr.json
    dest: "{{ etcd_ca_home }}"
    owner: vagrant
    group: vagrant
    mode: '0644'
- shell: |
    cfssl gencert -initca etcd-ca-csr.json | cfssljson -bare etcd-ca
  args:
    chdir: "{{ etcd_ca_home }}"


#
# ETCD サーバー証明書
#
- name: ETCD Server Certificate
  template:
    src: etcd-csr.json
    dest: "{{ etcd_ca_home }}"
    owner: vagrant
    group: vagrant
    mode: '0644'
- shell: |
    cfssl gencert \
      -ca=etcd-ca.pem \
      -ca-key=etcd-ca-key.pem \
      -config=etcd-ca-config.json \
      -hostname=10.32.0.1,__MASTER_LIST__,127.0.0.1,kubernetes,kubernetes.default,kubernetes.default.svc,kubernetes.default.svc.cluster,kubernetes.svc.cluster.local \
      -profile=kubernetes \      
    etcd-csr.json | cfssljson -bare etcd-server
  args:
    chdir: "{{ etcd_ca_home }}"

#
# ETCD ピア証明書
#
- name: ETCD Peer Certificate
  template:
    src: etcd-peer-csr.json
    dest: "{{ etcd_ca_home }}"
    owner: vagrant
    group: vagrant
    mode: '0644'
- shell: |
    cfssl gencert \
      -ca=etcd-ca.pem \
      -ca-key=etcd-ca-key.pem \
      -config=etcd-ca-config.json \
      -hostname=10.32.0.1,__PEER_LIST__,127.0.0.1,kubernetes,kubernetes.default,kubernetes.default.svc,kubernetes.default.svc.cluster,kubernetes.svc.cluster.local \      
      -profile=kubernetes \
    etcd-peer-csr.json | cfssljson -bare etcd-peer
  args:
    chdir: "{{ etcd_ca_home }}"









